<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0"
      prefWidth="700.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.isky.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <children>
        <TabPane prefHeight="572.0" prefWidth="660.0" tabClosingPolicy="UNAVAILABLE">
            <tabs>
                <Tab text="单文件选择">
                    <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="421.0" prefWidth="660.0">
                            <children>
                                <Pane prefHeight="600.0" prefWidth="700.0">
                                    <children>
                                        <Button fx:id="selJpgFolderBtn" layoutX="104.0" layoutY="75.0"
                                                onAction="#onHelloButtonClick" prefHeight="29.0" prefWidth="149.0"
                                                style="-fx-background-color: green;" text="选择文件夹:"/>

                                        <Label fx:id="jpgFolderLabel" layoutX="351.0" layoutY="85.0"/>
                                        <ListView fx:id="imgListView" layoutX="39.0" layoutY="163.0" prefHeight="258.0"
                                                  prefWidth="573.0"/>
                                        <Button fx:id="hcPdtBtn" layoutX="154.0" layoutY="458.0" mnemonicParsing="false"
                                                onAction="#hcPdtClick" prefHeight="36.0" prefWidth="99.0"
                                                style="-fx-background-color: green;" text="合成"/>
                                        <Button fx:id="clearBtn" layoutX="397.0" layoutY="458.0" mnemonicParsing="false"
                                                onAction="#clearBtnClick" prefHeight="36.0" prefWidth="99.0"
                                                style="-fx-background-color: red;" text="清空"/>
                                        <Button fx:id="selCreateFolderBtn" layoutX="104.0" layoutY="123.0"
                                                mnemonicParsing="false" onAction="#selCreateFolderClick"
                                                prefHeight="29.0" prefWidth="149.0" style="-fx-background-color: green;"
                                                text="选择生成目录"/>
                                        <Label fx:id="createFolderLabel" layoutX="351.0" layoutY="123.0"
                                               prefHeight="29.0" prefWidth="167.0"/>
                                    </children>
                                </Pane>
                            </children>
                        </AnchorPane>
                    </content>
                </Tab>
                <Tab text="多文件选择">
                    <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                            <children>
                                <Button fx:id="selFolderBtn" onAction="#selFolderClick" layoutX="110.0" layoutY="71.0"
                                        mnemonicParsing="false"
                                        prefHeight="39.0" prefWidth="88.0" style="-fx-background-color: green;"
                                        text="选择文件夹：" textFill="#fcf8f8"/>
                                <Label fx:id="twoFolderLabel" layoutX="260.0" layoutY="69.0" prefHeight="44.0" prefWidth="149.0"/>
                                <ListView fx:id="folderListView" layoutX="110.0" layoutY="136.0" prefHeight="289.0" prefWidth="443.0"/>
                                <Button fx:id="subBtn" onAction="#subBtnClick" layoutX="266.0" layoutY="449.0"
                                        mnemonicParsing="false"
                                        prefHeight="35.0" prefWidth="129.0" style="-fx-background-color: green;"
                                        text="开始合成"/>
                            </children>
                        </AnchorPane>
                    </content>
                </Tab>
            </tabs>
        </TabPane>
    </children>
</VBox>
